{
  "name": "movienight",
  "description": "Search your digital movie collection while offline",
  "version": "1.0.0",
  "author": "Brian Lenoski <brian.lenoski@gmail.com>",
  "productName": "Movie Night",
  "main": "./app/main/main.js",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production electron .",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js -p --progress --profile --colors",
    "start-dev": "npm run build-dev && cross-env NODE_ENV=development electron .",
    "build-dev": "cross-env NODE_ENV=development webpack --config webpack.config.dev.js --progress --profile --colors",
    "start-dev-server": "cross-env NODE_ENV=development webpack-dev-server --config webpack.config.dev.js --output-public-path bundle --port 3000",
    "test": "standard && npm run build && npm run test-all",
    "test-all": "cross-env NODE_ENV=test jest --coverage --verbose",
    "pack": "build --dir",
    "dist": "build",
    "postinstall": "install-app-deps"
  },
  "engines": {
    "node": ">=6.10.0"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.2.1",
    "babel-preset-react": "^6.23.0",
    "coveralls": "^2.13.1",
    "cross-env": "^3.2.3",
    "css-loader": "^0.26.4",
    "electron": "^1.6.1",
    "electron-builder": "^15.2.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^20.0.1",
    "standard": "^9.0.0",
    "style-loader": "^0.13.2",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "dependencies": {
    "bootstrap": "4.0.0-alpha.6",
    "classnames": "^2.2.5",
    "limiter": "^1.1.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "react-transition-group": "^1.1.3",
    "redux": "^3.6.0",
    "styled-components": "^1.4.6",
    "underscore": "^1.8.3",
    "winston": "^2.3.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "app/**/*.{js,jsx}"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "build": {
    "appId": "org.confidentcruiser.movienight",
    "files": [
      "app/main.js",
      "bundle/"
    ],
    "mac": {
      "category": "public.app-category.tools"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
